@model GymMembershipWebApp.Models.Member

@{
    ViewData["Title"] = "Member Details";
}

<h2>@Model.Name</h2>

<div>
    <h3>Member Information</h3>
    <dl class="row">
        <dt class="col-sm-2">Member ID</dt>
        <dd class="col-sm-10">@Model.MemberId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Membership Type</dt>
        <dd class="col-sm-10">@Model.MembershipType</dd>

        <dt class="col-sm-2">Join Date</dt>
        <dd class="col-sm-10">@Model.JoinDate.ToString("MM/dd/yyyy")</dd>

        <dt class="col-sm-2">Renewal Date</dt>
        <dd class="col-sm-10">@Model.RenewalDate.ToString("MM/dd/yyyy")</dd>

        <dt class="col-sm-2">Active Status</dt>
        <dd class="col-sm-10">@Model.IsActive ? "Active" : "Inactive"</dd>
    </dl>
</div>

<div>
    <a href="@Url.Action("Edit", "Member", new { id = Model.MemberId })" class="btn btn-primary">Edit</a>
    <a href="@Url.Action("Delete", "Member", new { id = Model.MemberId })" class="btn btn-danger">Delete</a>
    <a href="@Url.Action("Index", "Member")" class="btn btn-secondary">Back to List</a>
</div>
